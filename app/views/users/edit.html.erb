<h1>Edit Account</h1>

<% form_for @user, :url => account_url do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
  <% if not @user.roles.name_is('admin').empty? %>
    <%= collection_select :user, :role_ids,
    Role.all(:order => 'name ASC'), :id, :name,
      { :selected => @user.role_ids },
      { :multiple => true, :name => 'user[role_ids][]' }
    -%>
  <% end %>
	<p>
	  <%= f.submit "Update" %>
	</p>
<% end %>

<br />
<%= link_to "My Profile", account_path %>
