!!!
%html(xmlns = "http://www.w3.org/1999/xhtml")
  %head
    %meta{ :content => "text/html;charset=UTF-8", "http-equiv" => "content-type" }
    %title
      dia-x:
      = controller.controller_name.humanize
      = controller.action_name
    = javascript_include_tag :defaults
    = javascript_include_tag 'dx/dhtmlxGrid/codebase/dhtmlxcommon.js'
    = javascript_include_tag 'dx/dhtmlxGrid/codebase/dhtmlxgrid.js'
    = javascript_include_tag 'dx/dhtmlxGrid/codebase/dhtmlxgridcell.js'
    = javascript_include_tag 'dx/dhtmlxDataProcessor/codebase/dhtmlxdataprocessor.js'

    = stylesheet_link_tag 'blueprint/screen.css'
    = stylesheet_link_tag 'blueprint/print.css', :media => 'print'
    = stylesheet_link_tag 'dx/dhtmlxgrid.css'
    = stylesheet_link_tag 'dx/dhtmlxgrid_dhx_web_ik.css'
    /
      [if IE]>
      <haml:loud> stylesheet_link_tag 'blueprint/ie.css' </haml:loud>
      <![endif]
    = stylesheet_link_tag 'compiled/application'    
    = render :partial => 'layouts/google_analytics'
  %body
    %a.plain(href = '/')
      = image_tag('dia-x-logo.png', :style => 'margin:0 0 0px 0px')
    = render :partial => 'layouts/logged_in'
    %ul.menu
      %li= link_to 'Competitions', :controller => 'competitions'
      %li= link_to 'Problems', :controller => 'diagrams'
      %li= link_to 'Authors', :controller => 'authors'
      %li= link_to 'Collections', :controller => 'collections'
      %li= link_to 'Import', :controller => 'imports'
      %li= link_to 'Feedback', :controller => 'posts'
    %div{ :style => "height:50px; clear:both; margin:4px auto; text-align:center" }
      - if flash[:notice]
        %p.notice= flash[:notice]
      - elsif flash[:error]
        %p.error= flash[:error]
      - else
        %p.nomessage
    .container{ :style => "clear:both;padding-top:2px" }
      != yield
    %div{ :style => "text-align:right;padding-top:1em" }
      %span{ :style => "border-top:1px solid #bbb;font:normal smaller Arial" }
