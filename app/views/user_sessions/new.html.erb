<h1>Log in, or <%= link_to 'register', signup_path %></h1>

<% form_for @user_session, :url => login_url do |f| %>

  <div>
		<%= f.error_messages %>
  	<%= f.label :login %><br />
  	<%= f.text_field :login %><br />
  </div>
	<div>
  	<%= f.label :password %><br />
  	<%= f.password_field :password %><br />
    <br />
      <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
    <br />
	</div>

	<div>
		<%= f.submit "Login" %>
	</div>
	<p />
	<%= link_to 'Renew lost password', :controller => 'password_resets', :action => 'new' %>
	
<% end %>
